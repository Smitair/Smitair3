@model SmitairDOTNET.Models.Effect

@{
    ViewData["Title"] = "Add Effect";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h2>Registration</h2></center>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEffect" role="form" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Effect Name</label>
                <input asp-for="EffectName" class="form-control" />
                <span asp-validation-for="EffectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Youtube link</label>
                <input asp-for="YoutubeLink" class="form-control" />
                <span asp-validation-for="YoutubeLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Description</label>
                <textarea asp-for="Description" rows="4" cols="50" class="form-control">Enter description here...</textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Upload Effect</label>
                <label class="btn btn-info" style="width: 100%">
                    Browse effect
                    <input style="display: none" type="file" name="file" id="file" accept=".smi" />
                </label>
                <span asp-validation-for="EffectLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>