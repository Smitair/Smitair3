@model IEnumerable<SmitairDOTNET.Models.Effect>

@{
    ViewData["Title"] = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    tr a{
        color: #FFFFFF;
    }

    tr:hover .glyphicon {
        color: #E96E00;
    }

    tr:hover a {
        color: #E96E00;
    }
</style>

<h2>Shop</h2>
<h3>@ViewBag.Purchase</h3>

<div class="col-sm-9">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Effect Name
                </th>
                <th>
                    Author
                </th>
                <th>
                    Grade
                </th>
                <th>
                    Youtube Link
                </th>
                <th>
                    Description
                </th>
                <th>Buy</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EffectName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AvgGrade)
                        </td>
                        <td style="width:500px;">
                            <div style="position:relative;height:0;padding-bottom:39.16%"><iframe src="@Html.DisplayFor(modelItem => item.YoutubeLink)" style="position:absolute;width:100%;height:100%;left:0" width="919" height="360" frameborder="0" gesture="media" allow="encrypted-media" allowfullscreen></iframe></div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a asp-action="Shop" asp-route-idd="@item.EffectID"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>